sing System;

class Program
{
    static void Main()
    {
        // Eingabe von drei Zahlen durch den Benutzer
        Console.WriteLine("Bitte geben Sie die erste Zahl ein:");
        double num1 = Convert.ToDouble(Console.ReadLine());

        Console.WriteLine("Bitte geben Sie die zweite Zahl ein:");
        double num2 = Convert.ToDouble(Console.ReadLine());

        Console.WriteLine("Bitte geben Sie die dritte Zahl ein:");
        double num3 = Convert.ToDouble(Console.ReadLine());

        // Aufruf der CalculateAverage-Methode und Ausgabe des Ergebnisses
        double average = CalculateAverage(num1, num2, num3);
        Console.WriteLine($"Der Durchschnitt von {num1}, {num2} und {num3} ist: {average}");
    }

    // Methode zur Berechnung des Durchschnitts von drei Zahlen
    static double CalculateAverage(double a, double b, double c)
    {
        // Code-Block für die Durchschnittsberechnung
        double result = (a + b + c) / 3.0;

        // Rückgabe des Ergebnisses
        return result;
    }
}
